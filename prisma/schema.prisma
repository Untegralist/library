generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Writer {
  id       String @id // This acts as your username
  password String
  
  // Relation: A writer has "many" books
  books    Book[] 
}

model Book {
  id            String   @id @default(uuid())
  title         String
  author        String  
  publishedDate DateTime @default(now())
  genre         Genre
  synopsis      String
  documentName  String?
  documentType  String?
  documentUrl   String?

  // Relation: A book belongs to "one" writer
  writerId      String
  writer        Writer   @relation(fields: [writerId], references: [id])
}

enum Genre {
  FICTION
  NON_FICTION

}